<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>io.github.lo2dev.Echo</id>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>

  <name>Echo</name>
  <summary>Ping websites</summary>

  <developer id="io.github.lo2dev">
    <name translate="no">Lo</name>
  </developer>

  <description>
    <p>Utility to ping websites.</p>
    <p>Features include:</p>
    <ul>
      <li>Advanced ping parameters like ping count, timeout, etc</li>
    </ul>
  </description>

  <launchable type="desktop-id">io.github.lo2dev.Echo.desktop</launchable>

  <branding>
    <color type="primary" scheme_preference="light">#8ff0a4</color>
    <color type="primary" scheme_preference="dark">#26a269</color>
  </branding>

  <url type="bugtracker">https://github.com/lo2dev/Echo/issues</url>
  <url type="homepage">https://lo2dev.github.io/portal/echo</url>
  <url type="donation">https://lo2dev.github.io/support</url>
  <url type="vcs-browser">https://github.com/lo2dev/Echo</url>

  <recommends>
    <display_length compare="ge">360</display_length>
  </recommends>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/lo2dev/Echo/master/data/screenshots/1.png</image>
      <caption>Main page showcasing the ping form with advanced options</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/lo2dev/Echo/master/data/screenshots/2.png</image>
      <caption>Ping results page showcasing the stats after the ping</caption>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="2.1" date="2024-11-08">
      <description translate="no">
        <ul>
          <li>Added toast for source address error</li>
          <li>Added Dutch translations</li>
          <li>Added Russian translations</li>
          <li>Added Italian translations</li>
          <li>Added Arabic translations</li>
        </ul>
      </description>
    </release>
    <release version="2.0" date="2024-09-24">
      <description translate="no">
        <ul>
          <li>Added a spinner to the address bar when pinging</li>
          <li>Added descriptions to the Source and Family rows</li>
          <li>Added notifications when pinging is done</li>
          <li>Added a link to workaround for the Insufficient Permissions error</li>
          <li>Added Norwegian Bokmaal translations</li>
          <li>Pings can now be cancelled</li>
          <li>Redesigned the Response Time row to be individual cards</li>
          <li>Renamed Advanced Options to Ping Options</li>
          <li>Ping options can now be collapsed during ping</li>
          <li>When pinging an IP, it won't be shown two times in the results page</li>
          <li>Ping button will now be disabled when address bar is empty</li>
          <li>Increased the maximum number of pings to 1000</li>
          <li>Ported to GNOME 47</li>
        </ul>
        <p>Translators:</p>
        <ul>
          <li>Brage Fuglseth</li>
        </ul>
      </description>
    </release>
    <release version="1.2" date="2024-07-07">
      <description translate="no">
        <ul>
          <li>If the protocol (https://) is included in the address, it will be automatically removed upon pinging</li>
          <li>Error messages will now display in toasts</li>
          <li>Improved the UI to accommodate long domains</li>
          <li>Result icon will now be the same on all systems</li>
        </ul>
      </description>
    </release>
    <release version="1.1" date="2024-07-03">
      <description translate="no">
        <ul>
          <li>Remember if advanced options are expanded or not</li>
          <li>Made results and response time selectable</li>
          <li>You can now press enter to ping while the address bar is selected</li>
          <li>Improved error messages</li>
        </ul>
      </description>
    </release>
    <release version="1.0" date="2024-06-28">
      <description translate="no">
        <p>
          Initial release!
        </p>
      </description>
    </release>
  </releases>
</component>

